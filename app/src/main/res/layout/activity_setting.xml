<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lyl.myallforyou.ui.about.SettingActivity">

    <include layout="@layout/app_bar_main"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:textSize="13sp"
        android:text="您可以尝试打开以下选项，让信息在后台也可以发送"
        android:textColor="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/setting_push_layout"
        android:layout_marginTop="4dp"
        style="@style/DeviceInfoLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="通知权限"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/setting_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未开启》"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_auto_start_layout"
        style="@style/DeviceInfoLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="允许开机自启动"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/setting_auto_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去设置》"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_battey_layout"
        style="@style/DeviceInfoLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="忽略省电优化"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/setting_battey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未开启》"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_spacetime_layout"
        style="@style/DeviceInfoLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上传间隔"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/setting_spacetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5分钟》"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_widget_color_layout"
        style="@style/DeviceInfoLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="桌面文字颜色"
            android:textSize="14sp"/>

        <View
            android:id="@+id/setting_widget_color"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:background="@color/black"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开发者有话说：本软件设计的初衷就是 双方都知道该软件的作用，并且都同意此软件长期运行在自己手机上，再来使用该软件。目的就是为了给情侣、亲朋提供一个可以互相交流的乐子。"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="请大家都理性的看待此软件所存在的意义。\n技术是无情的，人与人才是交心的。"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
